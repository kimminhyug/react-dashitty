{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@dashboardity/layout-store": ["./node_modules/@dashboardity/layout-store"],
      "@dashboardity/layout-core": ["./node_modules/@dashboardity/layout-core"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
